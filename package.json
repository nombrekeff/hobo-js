{
  "name": "hobo-js",
  "version": "1.0.0",
  "description": "A little utility to generate html inside your js/ts code",
  "main": "./dist/hobo.js",
  "types": "./dist/types/hobo.d.ts",
  "type": "commonjs",
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc --doc -p . -d & npm run build:docs",
    "build:docs": "typedoc --out docs src/**/*.ts"
  },
  "keywords": [
    "js",
    "ts",
    "generate",
    "html",
    "from",
    "code",
    "typed",
    "template",
    "build",
    "in-code"
  ],
  "author": "nombrekeff",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.0",
    "jest": "^29.7.0",
    "jsdoc-to-markdown": "^8.0.0",
    "ts-jest": "^29.1.1",
    "tsdoc-markdown": "^0.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "typedoc": "^0.25.1"
  }
}
